issn = {1470160X},
journal = {Ecological Indicators},
keywords = {Ecological quality assessment,Ecosystem recovery,Estuaries,Free-living marine nematodes,Intertidal meiobenthos},
mendeley-groups = {INBENTO},
pages = {184--196},
publisher = {Elsevier Ltd},
title = {{Estuarine intertidal meiofauna and nematode communities as indicator of ecosystem's recovery following mitigation measures}},
url = {http://dx.doi.org/10.1016/j.ecolind.2015.02.013},
volume = {54},
year = {2015}
}
