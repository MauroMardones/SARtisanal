issn = {23524855},
journal = {Regional Studies in Marine Science},
keywords = {Chamelea gallina,Environmental influence,Geostatistics,Gulf of C{\'{a}}diz,Spatial distribution},
mendeley-groups = {INBENTO},
pages = {103024},
publisher = {Elsevier B.V.},
title = {{Spatial distribution patterns of striped venus clam (Chamelea gallina, L. 1758) natural beds in the Gulf of C{\'{a}}diz (SW Spain): Influence of environmental variables and management considerations}},
