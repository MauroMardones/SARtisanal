journal = {Journal of Sea Research},
keywords = {Benthic ecology,Community composition,Environmental factors,Macrofaunal assemblages,Nursery,Sandy shores},
mendeley-groups = {INBENTO},
number = {December 2020},
title = {{Spatial-temporal patterns of fish and macroinvertebrate communities in sandy beach surf zones: Short and medium-term variations}},
