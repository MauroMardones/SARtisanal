issn = {18790291},
journal = {Marine Environmental Research},
keywords = {Biotic indices,Estuaries,Soft-bottom communities,Southern Spain,Water Framework Directive},
mendeley-groups = {INBENTO},
number = {October},
pages = {41--50},
pmid = {29089141},
publisher = {Elsevier},
title = {{BENFES, a new biotic index for assessing ecological status of soft-bottom communities. Towards a lower taxonomic complexity, greater reliability and less effort}},
